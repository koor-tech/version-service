{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":automergeMinor",
  ],
  regexManagers: [
    {
      customType: "regex",
      fileMatch: ["^data/.*\\.json"],
      "matchStrings": [
        '".*?": \\{\
\\s*"version": "(?<currentValue>.*?)",\
\\s*"image_uri": "(?<depName>koorinc/koor-operator?):.*?",\
\\s*"image_hash": ".*?"'
      ],
      autoReplaceStringTemplate: "\"{{{replace 'v' '' newValue}}}\": {\n\
            \"version\": \"{{{replace 'v' '' newValue}}}\",\n\
            \"image_uri\": \"{{{depName}}}:{{{newValue}}}\",\n\
            \"image_hash\": \"{{{newDigest}}}\"",
      datasourceTemplate: "docker",
    },
    {
      customType: "regex",
      fileMatch: ["^data/.*\\.json"],
      "matchStrings": [
        '".*?": \\{\
\\s*"version": "(?<currentValue>.*?)",\
\\s*"image_uri": "(?<depName>koorinc/ceph?):.*?",\
\\s*"image_hash": ".*?"'
      ],
      autoReplaceStringTemplate: "\"{{{replace 'v' '' newValue}}}\": {\n\
            \"version\": \"{{{replace 'v' '' newValue}}}\",\n\
            \"image_uri\": \"{{{depName}}}:{{{newValue}}}\",\n\
            \"image_hash\": \"{{{newDigest}}}\"",
      datasourceTemplate: "docker",
    },
  ],
}
