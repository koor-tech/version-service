{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":automergeMinor",
  ],
  regexManagers: [
    {
      customType: "regex",
      fileMatch: ["^data/.*\\.json"],
      "matchStrings": [
        '".*?": \\{\
\\s*"version": "(?<currentValue>.*?)",\
\\s*"image_uri": "(?<depName>koorinc/koor-operator?):.*?"'
      ],
      autoReplaceStringTemplate: '"{{{newValue}}}": {\
            "version": "{{{newValue}}}",\
            "image_uri": "{{{depName}}}:{{{newValue}}}"',
      datasourceTemplate: "docker",
    },
    {
      customType: "regex",
      fileMatch: ["^data/.*\\.json"],
      "matchStrings": [
        '".*?": \\{\
\\s*"version": "(?<currentValue>.*?)",\
\\s*"image_uri": "(?<depName>koorinc/ceph?):.*?"'
      ],
      autoReplaceStringTemplate: '"{{{newValue}}}": {\
            "version": "{{{newValue}}}",\
            "image_uri": "{{{depName}}}:{{{newValue}}}"',
      datasourceTemplate: "docker",
    },
  ],
}
